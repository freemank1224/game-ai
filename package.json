{
  "name": "game-ai",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "install:frontend": "cd frontend && npm install",
    "install:backend": "pip install -r ./requirements.txt",
    "install:all": "npm run install:frontend && npm run install:backend",
    "start:backend": "cd backend && python -m uvicorn main:app --reload --port 8000",
    "start:frontend": "cd frontend && npm run dev",
    "start:all": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "stop:all": "kill-port 8000 5173"
  },
  "devDependencies": {
    "concurrently": "^7.0.0",
    "kill-port": "^2.0.1"
  }
}
